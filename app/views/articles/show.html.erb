<div class='action-buttons'>
  <% if current_user.id == @article.user_id %>
    <%= link_to 'Edit', edit_article_path(@article), class: 'button' %>
  <% end %>
  <%= link_to 'Back', articles_path, class: 'button prev-btn' %>
</div>

<section class='article-show'>
  <div class='article-header'>
    <h1><%= @article.title %></h1>
    <h2><%= @article.subheader %></h2>
  </div>

  <div class='article-content'>
    <%= @article.body %>
  </div>
</section>

<section class='article-show comments-create'>
  <%= render partial: 'comments/form' %>
</section>

<section class='article-show comments-show'>
  <h3>Comments</h3>
  <%= render partial: 'articles/comment', collection: @article.comments.reverse %>
</section>
