<section class='sign-up'>
  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username %><br />
      <i class="fas fa-user sign-icon"></i><%= f.text_field :username, autofocus: true, class: 'sign-fields' %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <i class="fas fa-user sign-icon"></i><%= f.email_field :email, autocomplete: "email", class: 'sign-fields' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <i class="fas fa-key sign-icon"></i><%= f.password_field :password, autocomplete: "new-password", class: 'sign-fields' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <i class="fas fa-key sign-icon"></i><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign-fields' %>
    </div>

    
    <div class="actions">
      <%= f.submit "Sign up" %>
      <%= render "users/shared/links" %>
    </div>
  <% end %>
</section>
